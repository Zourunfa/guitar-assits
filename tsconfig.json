{
  "compilerOptions": {
    // "target": "ES2020",
    "allowJs": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    // "module": "CommonJS",
    "module":"ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmitOnError": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",  


    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [ "src/**/*.tsx", "src/**/*.vue", "src/**/*.js","src/components/*.vue"],
  // "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/utils/tone.js","src/components/*.vue"],
  
}
